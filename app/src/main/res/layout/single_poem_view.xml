<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/poem_title"
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:lineSpacingExtra="8dp"
                />
            <TextView
                android:id="@+id/poem"
                android:text="some string"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/copy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/ColorStarship"
                    android:paddingTop="3dp"
                    android:layout_marginRight="5dp"
                    android:drawableTop="@drawable/ic_content_copy_black_24dp"
                    android:text="Copy"/>


                <Button
                    android:id="@+id/sms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:paddingTop="3dp"
                    android:background="@color/ColorStarship"
                    android:drawableTop="@drawable/ic_sms_black_24dp"
                    android:text="SMS" />
                <Button
                    android:id="@+id/share"
                    android:background="@color/ColorStarship"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:layout_marginLeft="5dp"
                    android:drawableTop="@drawable/ic_share_black_24dp"
                    android:text="Share"
                    android:onClick="sharePoem"/>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

